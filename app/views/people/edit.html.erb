<%= form_for @person do |f| %>
 <h2> <%= f.label :first_name %>
  <%= f.text_field :first_name %>
<br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
<br>
  <%= f.label :age %>
  <%= f.text_field :age %>
<br>
  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>
